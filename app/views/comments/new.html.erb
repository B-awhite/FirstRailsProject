<% if @comment.destination %>
<h1>New Comment being added to <%=@comment.destination.location%></h1>
<% else %>
<h1> New Comment </h1>
<% end %>

<%= render partial: "/layouts/errors", locals: {object: @comment} %>

<%= form_for([@comment.destination,@comment]) do |f| %>

 <% if !@comment.destination %>
   <%= f.label :destination %>
   <%= f.collection_select :destination_id, Destination.all, :id, :location %>
 <% else %>
   <%= f.hidden_field :destination_id %>
 <% end %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Post comment" %>

<% end %>  